{
    "manifest_version": 3,
    "name": "GeniusAI",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": ["https://www.linkedin.com/*"],
            "js": ["content.js"]
        }
    ],
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["http://localhost:8000/*"],
    "background": {
        "service_worker": "background.js"
    }
}